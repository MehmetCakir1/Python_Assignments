    "num=input(\"Enter a number: \")\n",
    "def harshad(num):\n",
    "    total=0\n",
    "    for i in range(0,len(num)):\n",
    "        total= total + int(num[i])\n",
    "    if int(num)%total==0:\n",
    "        return f\"{num} is a Harshad number\"\n",
    "    else:\n",
    "        return f\"{num} is not a Harshad number\"\n",
    "print(harshad(num))"
   ]
